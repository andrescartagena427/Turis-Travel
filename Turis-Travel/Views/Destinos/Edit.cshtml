@model Turis_Travel.Models.Destino

@{
    ViewData["Title"] = "Editar Destino";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white py-3 rounded-top-4">
            <h3 class="mb-0">
                ✏️ Editar Destino
            </h3>
        </div>

        <div class="card-body p-4">

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <!-- NOMBRE -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Nombre del destino</label>
                    <input asp-for="Nombre" class="form-control form-control-lg" placeholder="Ej: Playa Blanca" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <!-- CIUDAD Y PAIS -->
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Ciudad</label>
                        <input asp-for="Ciudad" class="form-control" placeholder="Ej: Cartagena" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">País</label>
                        <input asp-for="Pais" class="form-control" placeholder="Ej: Colombia" />
                    </div>
                </div>

                <!-- DESCRIPCION -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="4" placeholder="Describe el destino..."></textarea>
                </div>

                <!-- PRECIO -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Precio (USD)</label>
                    <input asp-for="Precio" type="number" class="form-control" />
                </div>

                <!-- IMAGEN MEJORADA -->
                <div class="mb-4">
                    <label class="form-label fw-bold">
                        Imagen del destino (pega aquí el enlace directo)
                    </label>
                    <input asp-for="ImagenUrl" id="imagenInput" class="form-control" placeholder="https://.../foto.jpg" />

                    <!-- Vista previa -->
                    <div class="mt-3">
                        <label class="text-muted">Vista previa:</label>
                        <div class="border rounded p-2 bg-light text-center">
                            <img id="previewImg"
                                 src="@Model.ImagenUrl"
                                 alt="Vista previa"
                                 class="img-fluid rounded shadow-sm"
                                 style="max-height: 250px; object-fit: cover;" />
                        </div>
                    </div>
                </div>

                <!-- BOTONES -->
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary px-4">⬅ Volver</a>
                    <button type="submit" class="btn btn-success px-5">
                        💾 Guardar cambios
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Vista previa dinámica
        document.getElementById('imagenInput').addEventListener('input', function () {
            document.getElementById('previewImg').src = this.value;
        });
    </script>
}


