@model Turis_Travel.Models.Reserva

@{
    ViewData["Title"] = "Crear Reserva";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-4">Crear Nueva Reserva</h2>

    @* Mostrar mensajes de éxito/errores simples *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <form asp-action="Crear" method="post" class="row g-3 shadow p-4 rounded bg-white">

        <!-- Cliente (select) -->
        <div class="col-md-6">
            <label class="form-label fw-bold">Cliente</label>
            <select asp-for="ID_cliente" class="form-select" required
                    asp-items="@(new SelectList(ViewBag.Clientes, "ID_cliente", "Nombre"))">
                <option value="">-- Seleccione un cliente --</option>
            </select>
            <span asp-validation-for="ID_cliente" class="text-danger"></span>
        </div>

        <!-- Paquete (select opcional) -->
        <div class="col-md-6">
            <label class="form-label fw-bold">Paquete (opcional)</label>
            <select asp-for="ID_paquete" class="form-select"
                    asp-items="@(new SelectList(ViewBag.Paquetes, "ID_paquete", "Nombre_paquete"))">
                <option value="">-- Ninguno --</option>
            </select>
        </div>

        <!-- Itinerario (select opcional) -->
        <div class="col-md-6">
            <label class="form-label fw-bold">Itinerario (opcional)</label>
            <select asp-for="ID_itinerario" class="form-select"
                    asp-items="@(new SelectList(ViewBag.Itinerarios, "ID_itinerario", "Nombre_itinerario"))">
                <option value="">-- Ninguno --</option>
            </select>
        </div>

        <!-- Transporte (select opcional) -->
        <div class="col-md-6">
            <label class="form-label fw-bold">Transporte (opcional)</label>
            <select asp-for="ID_transporte" class="form-select"
                    asp-items="@(new SelectList(ViewBag.Transportes, "ID_transporte", "Tipo_vehiculo"))">
                <option value="">-- Ninguno --</option>
            </select>
        </div>

        <!-- Número de pasajeros -->
        <div class="col-md-4">
            <label class="form-label fw-bold">Número de pasajeros</label>
            <input asp-for="Numero_pasajeros" type="number" min="1" class="form-control" />
            <span asp-validation-for="Numero_pasajeros" class="text-danger"></span>
        </div>

        <!-- Precio total -->
        <div class="col-md-4">
            <label class="form-label fw-bold">Precio total</label>
            <input asp-for="Precio_total" type="number" step="0.01" min="0" class="form-control" />
            <span asp-validation-for="Precio_total" class="text-danger"></span>
        </div>

        <!-- Estado -->
        <div class="col-md-4">
            <label class="form-label fw-bold">Estado</label>
            <select asp-for="Estado" class="form-select">
                <option value="pendiente">Pendiente</option>
                <option value="confirmada">Confirmada</option>
                <option value="cancelada">Cancelada</option>
            </select>
        </div>

        <!-- Botones -->
        <div class="col-12 mt-3">
            <button type="submit" class="btn btn-primary px-4">Guardar Reserva</button>
            <a asp-action="Lista" class="btn btn-secondary ms-2">Volver a lista</a>
        </div>
    </form>
</div>


