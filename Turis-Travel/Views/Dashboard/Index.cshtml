@model Turis_Travel.Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}


<!-- SIDEBAR -->
<div class="sidebar">
    <div class="title">Agencia Viajes<br><span style="font-size:12px;color:#888;">Panel de Control</span></div>

    <a href="/Dashboard/Index" class="menu-item active"><i class="bi bi-speedometer2"></i> Dashboard</a>
    <a href="/Destinos/Index" class="menu-item"><i class="bi bi-geo-alt"></i> Destinos</a>
    <a href="/Paquetes/Lista" class="menu-item"><i class="bi bi-box-seam"></i> Paquetes Turísticos</a>
    <a href="/Reserva/Lista" class="menu-item"><i class="bi bi-journal-check"></i> Reservas</a>
    <a href="/Clientes/Lista" class="menu-item"><i class="bi bi-people"></i> Clientes</a>
    <a href="/Configuracion/Index" class="menu-item"><i class="bi bi-gear"></i> Configuración</a>
</div>

<!-- NAVBAR -->
<div class="navbar-top">
    <input type="text" class="form-control nav-search" placeholder="Buscar cliente, reserva, destino...">

    <div class="d-flex align-items-center gap-3">
        <i class="bi bi-bell" style="font-size:20px; cursor:pointer;"></i>
        <img src="https://i.ibb.co/2kf9tRb/user.png" width="40" style="border-radius:50%;">
    </div>
</div>

<!-- CONTENIDO -->
<div class="main-content">

    <h2 class="fw-bold">Resumen Ejecutivo</h2>
    <p class="text-muted">Bienvenido, aquí tienes un resumen de la actividad de tu agencia.</p>

    <!-- TARJETAS CON DATOS REALES -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card-summary">
                <div class="summary-title">Reservas este mes</div>
                <div class="summary-value" data-count="@Model.ReservasEsteMes">@Model.ReservasEsteMes</div>
                <div class="text-success summary-change">Actualizado</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card-summary">
                <div class="summary-title">Ingresos este mes</div>
                <div class="summary-value">$@Model.IngresosEsteMes</div>
                <div class="text-success summary-change">Actualizado</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card-summary">
                <div class="summary-title">Nuevos Clientes</div>
                <div class="summary-value">@Model.NuevosClientes</div>
                <div class="text-success summary-change">Actualizado</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card-summary">
                <div class="summary-title">Próximas Salidas</div>
                <div class="summary-value">@Model.ProximasSalidas</div>
                <div class="text-danger summary-change">Actualizado</div>
            </div>
        </div>
    </div>

    <h4 class="fw-bold">Últimas Reservas</h4>

    <table class="table mt-3">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Cliente</th>
                <th>Paquete</th>
                <th>Fecha</th>
                <th>Estado</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.UltimasReservas)
            {
                <tr>
                    <td>@r.IdReserva</td>
                    <td>@r.Cliente</td>
                    <td>@r.Paquete</td>
                    <td>@r.FechaInicio.ToString("dd/MM/yyyy")</td>
                    <td>
                        <span class="status @r.Estado.ToLower()">@r.Estado</span>
                    </td>
                    <td>$@r.Precio</td>
                </tr>
            }
        </tbody>
    </table>

</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
