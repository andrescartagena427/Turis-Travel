@model Turismo_Viajes.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Editar Usuario</h2>

    <form asp-action="Edit" method="post" class="card p-4 shadow-sm">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Nombre" class="form-label">Nombre</label>
            <input asp-for="Nombre" class="form-control" required />
        </div>
        <div class="mb-3">
            <label asp-for="Correo" class="form-label">Correo</label>
            <input asp-for="Correo" type="email" class="form-control" required />
        </div>
        <div class="mb-3">
            <label asp-for="Rol" class="form-label">Rol</label>
            <select asp-for="Rol" class="form-select">
                <option value="Administrador">Administrador</option>
                <option value="Empleado">Empleado</option>
                <option value="Cliente">Cliente</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Activo</label>
            <input asp-for="Activo" type="checkbox" class="form-check-input ms-2" />
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Guardar Cambios
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
    </form>
</div>
