@{
    ViewData["Title"] = "Configuración - Panel principal";
}

<style>
    /* === PANEL DE CONFIGURACIÓN === */
    body {
        background: linear-gradient(to bottom right, #e3f2fd, #e0f7fa);
        font-family: 'Segoe UI', sans-serif;
    }

    .config-header {
        text-align: center;
        margin-top: 50px;
        margin-bottom: 40px;
        color: #023e8a;
    }

        .config-header h2 {
            font-weight: 800;
            font-size: 2.5rem;
            color: #0077b6;
        }

        .config-header p {
            color: #555;
            font-size: 1.1rem;
            margin-top: 10px;
        }

    .card {
        border-radius: 20px;
        transition: all 0.3s ease-in-out;
        border: none;
        background: #ffffff;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 30px rgba(0, 123, 255, 0.25);
        }

    .card-body {
        padding: 2rem 1.5rem;
    }

    .card-icon {
        font-size: 3rem;
        color: #00b4d8;
        margin-bottom: 15px;
    }

    .card-title {
        font-weight: 700;
        margin-bottom: 10px;
    }

    .btn-config {
        border: none;
        border-radius: 10px;
        padding: 0.6rem 1.2rem;
        font-weight: 600;
        transition: 0.3s ease;
    }

        .btn-config:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);
        }

    .btn-roles {
        background: linear-gradient(90deg, #0077b6, #00b4d8);
        color: white;
    }

    .btn-permisos {
        background: linear-gradient(90deg, #2d6a4f, #40916c);
        color: white;
    }

        .btn-roles:hover,
        .btn-permisos:hover {
            opacity: 0.9;
        }
</style>

<div class="container">
    <div class="config-header">
        <h2>⚙ Panel de Configuración</h2>
        <p>Administra las funciones principales del sistema Turis_Travel</p>
    </div>

    <div class="row justify-content-center">
        <!-- Tarjeta de Roles -->
        <div class="col-md-5">
            <div class="card text-center mb-4">
                <div class="card-body">
                    <i class="bi bi-person-badge card-icon"></i>
                    <h4 class="card-title text-primary">Gestión de Roles</h4>
                    <p class="card-text text-secondary">
                        Administra los diferentes roles del sistema (Administrador, Usuario, etc.)
                    </p>
                    <a asp-controller="Rol" asp-action="Index" class="btn btn-config btn-roles w-100">
                        <i class="bi bi-arrow-right-circle me-2"></i>Ir a Roles
                    </a>
                </div>
            </div>
        </div>

        <!-- Tarjeta de Permisos -->
        <div class="col-md-5">
            <div class="card text-center mb-4">
                <div class="card-body">
                    <i class="bi bi-shield-lock card-icon"></i>
                    <h4 class="card-title text-success">Gestión de Permisos</h4>
                    <p class="card-text text-secondary">
                        Configura los permisos asociados a cada rol del sistema.
                    </p>
                    <a asp-controller="Permiso" asp-action="Index" class="btn btn-config btn-permisos w-100">
                        <i class="bi bi-arrow-right-circle me-2"></i>Ir a Permisos
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
