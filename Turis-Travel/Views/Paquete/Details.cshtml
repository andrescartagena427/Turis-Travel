@model Turis_Travel.Models.Paquete

@{
    ViewData["Title"] = "Detalles del Paquete";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    .details-card {
        max-width: 800px;
        margin: 40px auto;
        padding: 35px;
        background: #ffffff;
        border-radius: 20px;
        box-shadow: 0px 10px 28px rgba(0,0,0,.10);
    }

    .details-title {
        font-size: 2rem;
        font-weight: 700;
        color: #1f3c88;
        text-align: center;
        margin-bottom: 25px;
    }

    .details-group {
        background: #f7f9fc;
        padding: 16px;
        border-radius: 12px;
        margin-bottom: 12px;
        border-left: 5px solid #1f3c88;
    }

        .details-group label {
            font-weight: bold;
            color: #0d1b3d;
        }

        .details-group p {
            margin: 0;
            color: #333;
        }

    .btn-glass {
        padding: 10px 20px;
        border-radius: 12px;
        font-weight: 600;
        transition: .2s;
    }

        .btn-glass:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0,0,0,.15);
        }
</style>

<div class="details-card">
    <h2 class="details-title">📄 Detalles del Paquete Turístico</h2>

    <div class="details-group">
        <label>ID del Paquete:</label>
        <p>@Model.ID_paquete</p>
    </div>

    <div class="details-group">
        <label>Nombre del Paquete:</label>
        <p>@Model.Nombre_paquete</p>
    </div>

    <div class="details-group">
        <label>Descripción:</label>
        <p>@Model.Descripcion</p>
    </div>

    <div class="details-group">
        <label>Precio Base:</label>
        <p>@Model.Precio_base.ToString("C2")</p>
    </div>

    <div class="details-group">
        <label>Fecha Inicio:</label>
        <p>@Model.Fecha_inicio?.ToString("dd/MM/yyyy")</p>
    </div>

    <div class="details-group">
        <label>Fecha Fin:</label>
        <p>@Model.Fecha_fin?.ToString("dd/MM/yyyy")</p>
    </div>

    <div class="details-group">
        <label>Capacidad Máxima:</label>
        <p>@Model.Capacidad_maxima</p>
    </div>

    <div class="details-group">
        <label>Estado:</label>
        <p>@Model.Estado</p>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary btn-glass">
            ⬅️ Volver
        </a>

        <a asp-action="Edit" asp-route-id="@Model.ID_paquete" class="btn btn-primary btn-glass">
            ✏️ Editar
        </a>
    </div>
</div>
