@model Turis_Travel.Models.Paquete

@{
    ViewData["Title"] = "Editar Paquete";
}

<style>
    .form-card {
        max-width: 750px;
        margin: auto;
        background: #ffffff;
        padding: 35px;
        border-radius: 18px;
        box-shadow: 0 8px 28px rgba(0, 0, 0, 0.08);
        transition: 0.3s ease;
    }

        .form-card:hover {
            box-shadow: 0 12px 34px rgba(0, 0, 0, 0.12);
        }

    .form-title {
        font-size: 1.9rem;
        font-weight: 700;
        color: #1d3557;
        text-align: center;
        margin-bottom: 25px;
    }

    .form-label {
        font-weight: 600;
        color: #1d3557;
    }

    .btn-glass {
        border-radius: 10px;
        padding: 8px 18px;
        font-weight: 600;
        backdrop-filter: blur(4px);
        transition: 0.2s ease;
    }

        .btn-glass:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 0, 0, .15);
        }
</style>


<div class="form-card mt-4">
    <h2 class="form-title">Editar Paquete Turístico</h2>

    <form asp-action="Edit">
        <input type="hidden" asp-for="ID_paquete" />

        <div class="mb-3">
            <label class="form-label">Nombre del Paquete</label>
            <input asp-for="Nombre_paquete" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Descripción</label>
            <textarea asp-for="Descripcion" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Precio Base</label>
            <input asp-for="Precio_base" class="form-control" />
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">Fecha Inicio</label>
                <input asp-for="Fecha_inicio" type="date" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label">Fecha Fin</label>
                <input asp-for="Fecha_fin" type="date" class="form-control" />
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Capacidad Máxima</label>
            <input asp-for="Capacidad_maxima" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Estado</label>
            <input asp-for="Estado" class="form-control" />
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary btn-glass">Volver</a>
            <button type="submit" class="btn btn-primary btn-glass px-4">Actualizar</button>
        </div>
    </form>
</div>

