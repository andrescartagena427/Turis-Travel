<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Turis_Travel</title>

    <!-- BOOTSTRAP CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" />

    <!-- ESTILOS PERSONALIZADOS -->
    <style>
        .text-shadow {
            text-shadow: 0px 3px 6px rgba(0,0,0,0.4);
        }

        .oferta-card {
            transition: transform 0.25s ease, box-shadow 0.25s ease;
        }

            .oferta-card:hover {
                transform: translateY(-7px);
                box-shadow: 0px 10px 25px rgba(0,0,0,0.15);
            }

        .reserva-card:hover {
            transform: scale(1.01);
            transition: 0.2s;
        }
    </style>
</head>

<body>

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
            <div class="container-fluid px-0">
                <a class="navbar-brand d-flex align-items-center ms-3" href="#">
                    <span class="material-symbols-outlined text-primary me-2 fs-2">
                        travel_explore
                    </span>
                    <span class="fw-bold fs-4">Turis-Travel</span>
                </a>

                <button class="navbar-toggler me-3" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarT">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end me-3" id="navbarT">
                    <ul class="navbar-nav mb-2 mb-lg-0 me-3">
                        <li class="nav-item">
                            <a class="nav-link active" href="/inicio">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Destinos">Destinos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Ofertas">Ofertas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Contacto">Contacto</a>
                        </li>
                    </ul>

                    <a class="btn btn-primary" href="/Dashboard/Index">panel administrador</a>
                </div>
            </div>
        </nav>
    </header>

    <!-- CONTENIDO -->
    <main>
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-dark text-light pt-4 pb-3 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5 class="fw-bold">Turis-Travel</h5>
                    <p class="small text-secondary">
                        Tu agencia de viajes confiable para descubrir los destinos más increíbles del mundo.
                    </p>
                </div>

                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold">Enlaces rápidos</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-secondary text-decoration-none">Inicio</a></li>
                        <li><a href="#" class="text-secondary text-decoration-none">Destinos</a></li>
                        <li><a href="#" class="text-secondary text-decoration-none">Ofertas</a></li>
                        <li><a href="#" class="text-secondary text-decoration-none">Contacto</a></li>
                    </ul>
                </div>

                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold">Contáctanos</h6>
                    <p class="text-secondary small mb-1">Email: vertelbravojesus@gmail.com</p>
                    <p class="text-secondary small mb-1">Email: andresfelipeagudelocartagena0@gmail.com</p>
                    <p class="text-secondary small">Tel: +57 324 534 4034</p>
                </div>
            </div>

            <hr class="border-secondary">

            <p class="text-center small text-secondary mb-0">
                © @DateTime.Now.Year Turis-Travel — Todos los derechos reservados.
            </p>
        </div>
    </footer>

    <!-- BOOTSTRAP JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

