<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Turis_Travel</title>

    <!-- BOOTSTRAP CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" />
    <link rel="stylesheet" href="~/css/Style.css" />

</head>

<body>

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid px-0">
                <a class="navbar-brand d-flex align-items-center ms-3" href="#">
                    <span class="material-symbols-outlined text-primary me-2 fs-2">
                        travel_explore
                    </span>
                    <span class="fw-bold fs-4">Turis-Travel</span>
                </a>

                <button class="navbar-toggler me-3" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarT">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end me-3" id="navbarT">
                    <ul class="navbar-nav mb-2 mb-lg-0 me-3">
                        <li class="nav-item">
                            <a class="nav-link active" href="/inicio">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Destinos">Destinos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Ofertas">Ofertas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Contacto">Contacto</a>
                        </li>
                    </ul>

                    <a class="btn btn-primary" href="/Dashboard/Index">panel administrador</a>
                </div>
            </div>
        </nav>
    </header>

    <!-- CONTENIDO -->
    <main>
        @RenderBody()
    </main>

    <!-- FOOTER MODERNO -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold footer-title">Turis-Travel</h5>
                    <p class="footer-text">
                        Tu agencia de viajes confiable para descubrir los destinos más increíbles del mundo.
                    </p>
                </div>

                <div class="col-md-4 mb-4">
                    <h6 class="fw-bold footer-title">Enlaces rápidos</h6>
                    <ul class="list-unstyled footer-links">
                        <li><a href="#">Inicio</a></li>
                        <li><a href="#">Destinos</a></li>
                        <li><a href="#">Ofertas</a></li>
                        <li><a href="#">Contacto</a></li>
                    </ul>
                </div>

                <div class="col-md-4 mb-4">
                    <h6 class="fw-bold footer-title">Contáctanos</h6>
                    <p class="footer-text mb-1">Email: vertelbravojesus@gmail.com</p>
                    <p class="footer-text mb-1">Email: andresfelipeagudelocartagena0@gmail.com</p>
                    <p class="footer-text">Tel: +57 324 534 4034</p>
                    <!-- Redes sociales opcional -->
                    <div class="footer-social mt-2">
                        <a href="https://www.facebook.com/"><i class="bi bi-facebook"></i></a>
                        <a href="https://www.instagram.com/"><i class="bi bi-instagram"></i></a>
                        <a href="https://x.com/?lang=es"><i class="bi bi-twitter"></i></a>
                    </div>
                </div>
            </div>

            <hr class="footer-divider">

            <p class="text-center footer-copy mb-0">
                © @DateTime.Now.Year Turis-Travel — Todos los derechos reservados.
            </p>
        </div>
    </footer>


    <!-- BOOTSTRAP JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

