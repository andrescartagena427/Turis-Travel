@model Turis_Travel.Models.Cliente

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registrar Cliente</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: #f1f4f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card-custom {
            border-radius: 18px;
            border: none;
            box-shadow: 0px 4px 18px rgba(0,0,0,0.08);
        }

        .card-header {
            background: #1f3c88;
            border-radius: 18px 18px 0 0 !important;
        }

        label {
            font-weight: 600;
        }

        .btn-primary {
            background: #1f3c88;
            border: none;
            border-radius: 10px;
        }

            .btn-primary:hover {
                background: #162d66;
            }
    </style>
</head>
<body>

    <div class="container mt-5">
        <div class="card card-custom">
            <div class="card-header text-white p-3">
                <h3 class="mb-0">Registrar Nuevo Cliente</h3>
            </div>

            <div class="card-body p-4">

                <form asp-action="Crear" method="post">

                    <div class="mb-3">
                        <label>Nombre</label>
                        <input asp-for="Nombre" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label>Cédula</label>
                        <input asp-for="Cedula" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label>Teléfono</label>
                        <input asp-for="Telefono" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label>Email</label>
                        <input asp-for="Email" type="email" class="form-control" />
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-success px-4">
                            Guardar Cliente
                        </button>

                        <a href="/Clientes/Lista" class="btn btn-secondary px-4">
                            Volver
                        </a>
                    </div>

                </form>

            </div>
        </div>
    </div>

</body>
</html>



